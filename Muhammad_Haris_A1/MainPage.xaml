<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Muhammad_Haris_A1.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Game" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label Text="Any Message" FontSize="Title" Padding="30,10,30,10"/>
        <StackLayout
            HorizontalOptions="Center"
            Orientation="Horizontal">
            <Frame CornerRadius="10" Background="red" Margin="20">
                <Label Text="2" WidthRequest="40"
                       HorizontalTextAlignment="Center" VerticalTextAlignment="Center"
                       HeightRequest="40"/>
            </Frame>
          
        </StackLayout>
        <Button Text="Roll"/>
        <Label Text="Turn Result: 100" FontSize="Title" Padding="30,10,30,10"/>
        <Label Text="Overall Result: 50" FontSize="Title" Padding="30,10,30,10"/>
    </StackLayout>

</ContentPage>
